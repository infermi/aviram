---
export interface Props {
	title: string;
	body: string;
	svgClass: string;
}

const { title, body, svgClass } = Astro.props;
---

<div
	class="block max-w-md rounded-xl border border-gray-100 bg-gray-50 p-4 shadow-xl sm:p-6 lg:p-8"
>
	<i class=`text-4xl text-primary fa-solid fa-${svgClass}`></i>

	<h3 class="mt-3 text-lg font-bold text-black sm:text-xl">
		{title}
	</h3>

	<p class="mt-4 text-lg text-gray-600">
		{body}
	</p>
	{
		title == "הנאה מהדרך לתוצאות" ? (
			<>
				<br />
			</>
		) : (
			""
		)
	}
</div>
