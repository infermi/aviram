---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="he" class="scroll-smooth text-center transition-all" dir="rtl">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image" href="/aviram/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;700;900&family=Open+Sans:wght@300;400;500;600;700;800&family=Varela+Round&display=swap"
			rel="stylesheet"
		/>
		<!-- Flowbite -->
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.css"
			rel="stylesheet"
		/>
		<!-- Icons -->
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
		/>

		<title>{title}</title>
	</head>
	<body class="font-sans">
		<Navbar />
		<div
			class="fixed bottom-4 left-4 z-20 flex flex-col items-center gap-y-1 text-[2.5em] lg:left-10 lg:bottom-10 lg:text-[3em]"
		>
			<a
				href="tel:+972545429004"
				class="z-20 aspect-square w-fit rounded-full bg-blue-500 text-slate-600 transition-all duration-150 hover:scale-105 hover:shadow-2xl"
				><i class="fa-phone fa-solid aspect-square text-white"></i></a
			>
			<a
				href="https://wa.me/send?phone=972545429004"
				class="z-20 aspect-square w-fit rounded-full bg-green-500 text-slate-600 transition-all duration-150 hover:scale-105 hover:shadow-2xl"
				><i class="fa-whatsapp fa-brands aspect-square text-white"
				></i></a
			>
		</div>
		<div
			class="fixed w-full z-50 bg-dark_primary py-2 md:py-0 px-4 text-white sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8 rounded-b-lg"
		>
			<p class="text-center font-medium sm:text-left">
				מחלק שיחות יעוץ לשחקנים חינם
			</p>

			<div class="md:py-1">
				<a
					class="mt-2 block rounded-lg bg-white px-5 py-[0.3rem] md:py-2 text-center text-sm font-medium text-dark_primary transition hover:bg-white/90 focus:outline-none focus:ring active:text-indigo-500 sm:mt-0"
					href="#contact"
				>
					צור קשר
				</a>
			</div>
		</div>
		<slot />
		<Footer />
		<!-- Flowbite -->
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"
		></script>

		<!-- Ripple effect -->
		<script
			src="https://unpkg.com/@material-tailwind/html@latest/scripts/ripple.js"
		></script>
	</body>
</html>
